{% extends 'base.html.twig' %}

{% block monTitre %}
Les {{ famille.libelle}}
{% endblock %}
{% block body %}
{{ famille.libelle}}
<div>{{ famille.description }}</div>
    <div class="row">
        {% for animal in famille.animaux %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-12 cold-md-6 col-lg-2 text-center">
                        <img src="{{asset('images/' ~animal.image)}}" class="img-fluid">
                    </div>
                    <div class="col-auto text-center">
                        <h2><a href="{{path('afficher_animal', {'id' : animal.id})}}">{{ animal.nom }}</a></h2>
                        <div><a href="{{path('afficher_famille', {'id' : famille.id})}}" class="bnt bnt-primary">{{ animal.famille.libelle }}</a></div>
                    </div>
                    
                </div>    
            </div>
        {% endfor %}
    </div>
{% endblock %}